            </g:HTMLPanel>
        </g:north>

        <g:west size="200">
            <g:HTMLPanel styleName="b-app-navigator">

                <a id="home-view" href="#home:">Главная</a>
                <a id="account-view" href="#account:">Личный кабинет</a>
                <a id="product-view" href="#product:">Магазин</a>
